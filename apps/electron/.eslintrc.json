{
  "root": true,
  "env": {
    "es2021": true,
    "node": true,
    "browser": false
  },
  "plugins": ["drizzle"],
  "extends": [
    "@repo/eslint-config/base.js"
  ],
  "ignorePatterns": ["node_modules/**", "**/dist/**"],
  "rules": {
    "@typescript-eslint/no-var-requires": "off",
    "@typescript-eslint/consistent-type-imports": "error"
  }
}
