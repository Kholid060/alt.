{
  "name": "electron",
  "description": "Electron",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "main": "packages/main/dist/index.js",
  "scripts": {
    "build": "yarn run build:main && yarn run build:preload && yarn run build:renderer",
    "build:extension": "cd ./packages/extension && vite build",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production yarn run build && electron-builder build --config electron-builder.yml --dir --config.asar=false",
    "dev": "node scripts/watch.js",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts,tsx",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "yarn run typecheck:main && yarn run typecheck:preload && yarn run typecheck:renderer",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.js",
    "format": "npx prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,tsx,json}\""
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "7.0.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "cross-env": "7.0.3",
    "electron": "^29.0.1",
    "electron-builder": "^24.12.0",
    "eslint": "8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "13.3.8",
    "nano-staged": "0.8.0",
    "playwright": "1.41.2",
    "postcss": "^8.4.35",
    "postcss-import": "^16.0.1",
    "simple-git-hooks": "2.9.0",
    "tailwindcss": "^3.4.1",
    "typescript": "5.3.3",
    "unplugin-auto-expose": "0.3.0",
    "vite": "5.1.1",
    "vitest": "1.2.2"
  },
  "dependencies": {
    "@nut-tree/nut-js": "^3.1.2",
    "@repo/extension-core": "*",
    "@repo/shared": "*",
    "@repo/ui": "*",
    "@tootallnate/quickjs-emscripten": "^0.23.0",
    "dayjs": "^1.11.10",
    "dot-prop": "^8.0.2",
    "electron-log": "^5.1.1",
    "electron-store": "^8.1.0",
    "electron-updater": "6.1.7",
    "eventemitter3": "^5.0.1",
    "file-type": "^19.0.0",
    "framer-motion": "^11.0.5",
    "fs-extra": "^11.2.0",
    "fuzzysort": "^2.0.4",
    "globby": "^14.0.1",
    "isolated-vm": "^4.7.2",
    "lucide-react": "^0.331.0",
    "nanoid": "^5.0.6",
    "quickjs-emscripten": "^0.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reactflow": "^11.10.4",
    "semver": "^7.6.0",
    "sqlite3": "^5.1.7",
    "type-fest": "^4.10.3",
    "workerpool": "^9.1.0",
    "zod": "^3.22.4",
    "zustand": "^4.5.1"
  }
}
