{
  "name": "electron",
  "description": "Electron",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "main": "packages/main/dist/index.js",
  "scripts": {
    "build": "yarn run build:main && yarn run build:preload && yarn run build:renderer",
    "build:extension": "cd ./packages/extension && vite build",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "cross-env MODE=production yarn run build && electron-builder build --config electron-builder.yml --dir --config.asar=false",
    "dev": "node scripts/watch.js",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts,tsx",
    "typecheck:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck:renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "yarn run typecheck:main && yarn run typecheck:preload && yarn run typecheck:renderer",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.js",
    "format": "npx prettier --write \"**/*.{js,mjs,cjs,ts,mts,cts,tsx,json}\"",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "node scripts/migrate.js"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/better-sqlite3": "^7.6.9",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/which": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "7.0.1",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "cross-env": "7.0.3",
    "drizzle-kit": "^0.20.14",
    "electron": "29.1.3",
    "electron-builder": "^24.13.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "happy-dom": "13.3.8",
    "playwright": "1.41.2",
    "postcss": "^8.4.35",
    "postcss-import": "^16.0.1",
    "prettier": "^3.2.5",
    "simple-git-hooks": "2.9.0",
    "tailwindcss": "^3.4.1",
    "typescript": "5.3.3",
    "unplugin-auto-expose": "0.3.0",
    "vite": "5.1.1",
    "vite-plugin-static-copy": "^1.0.1",
    "vitest": "1.2.2"
  },
  "dependencies": {
    "@nut-tree/nut-js": "^3.1.2",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@repo/extension": "workspace:*",
    "@repo/extension-core": "workspace:*",
    "@repo/shared": "workspace:*",
    "@repo/ui": "workspace:*",
    "@tootallnate/quickjs-emscripten": "^0.23.0",
    "better-sqlite3": "https://github.com/neoxpert/better-sqlite3#fix_electron29_build",
    "dayjs": "^1.11.10",
    "dot-prop": "^8.0.2",
    "drizzle-orm": "^0.30.1",
    "electron-log": "^5.1.1",
    "electron-store": "^8.1.0",
    "electron-updater": "6.1.7",
    "eventemitter3": "^5.0.1",
    "file-type": "^19.0.0",
    "framer-motion": "^11.0.5",
    "fs-extra": "^11.2.0",
    "fuzzysort": "^2.0.4",
    "globby": "^14.0.1",
    "hotkeys-js": "^3.13.7",
    "immer": "^10.0.4",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.331.0",
    "match-sorter": "^6.3.4",
    "mitt": "^3.0.1",
    "nanoid": "^5.0.6",
    "quickjs-emscripten": "^0.29.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.13",
    "react-hotkeys-hook": "^4.5.0",
    "reactflow": "^11.10.4",
    "semver": "^7.6.0",
    "sourcemapped-stacktrace": "^1.1.11",
    "sqlite3": "^5.1.7",
    "type-fest": "^4.11.0",
    "uWebSockets.js": "https://github.com/uNetworking/uWebSockets.js#v20.43.0",
    "which": "^4.0.0",
    "workerpool": "^9.1.0",
    "zod": "^3.22.4",
    "zod-validation-error": "^3.0.3",
    "zustand": "^4.5.1"
  }
}
