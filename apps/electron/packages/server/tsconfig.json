{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"],
      "#packages/*": ["../*"],
      "#common/*": ["../common/*"],
    }
  },
  "include": ["src/**/*.ts", "../../types/**/*.d.ts", "./types/*.d.ts"],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
