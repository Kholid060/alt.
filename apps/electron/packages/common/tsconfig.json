{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "target": "esnext",
    "sourceMap": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": true,
    "types": ["node", "vite/client"],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"],
      "#common/*": ["../common/*"],
    }
  },
  "include": [
    "**/*.ts",
    "../../types/**/*.d.ts",
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
