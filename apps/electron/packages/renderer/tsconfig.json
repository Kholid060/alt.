{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"],
      "#packages/*": ["../*"],
      "#common/*": ["../common/*"]
    }
  },
  "extends": ["@repo/typescript-config/vite.json"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.d.ts",
    "../common/**/*.ts",
    "../../types/**/*.d.ts",
    "../preload/preload.d.ts"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
