{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "#preload": ["../preload/src/index"],
      "/@/*": ["./src/*"]
    }
  },
  "extends": ["@repo/typescript-config/vite.json"],
  "include": [
    "types/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../types/**/*.d.ts"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
