{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "/@/*": ["./src/*"],
      "#common/*": ["../common/*"]
    },
    "types": ["@repo/command-api/types/extension"]
  },
  "extends": ["@repo/typescript-config/vite.json"],
  "include": [
    "types/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../preload/preload.d.ts",
    "../../types/**/*.d.ts"
  ],
  "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
