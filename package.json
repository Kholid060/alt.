{
  "name": "komand",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "dev:app": "turbo dev --filter=electron --filter=@repo/*",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "eslint": "^8.56.0",
    "nano-staged": "^0.8.0",
    "prettier": "^3.1.1",
    "turbo": "latest",
    "typescript": "^5.4.5"
  },
  "packageManager": "yarn@4.1.1",
  "workspaces": [
    "apps/*",
    "packages/*",
    "examples/*"
  ]
}
