{
  "name": "alt.",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "dev:app": "turbo dev --filter=electron --filter=\"@alt-dot/*\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@alt-dot/eslint-config": "workspace:*",
    "eslint": "^8.56.0",
    "nano-staged": "^0.8.0",
    "prettier": "^3.1.1",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5"
  },
  "packageManager": "yarn@4.1.1",
  "workspaces": [
    "apps/*",
    "packages/*",
    "examples/*"
  ]
}
